    "version": "0.2.0",
    "configurations": [
        {
            "name": "Student Find By Id",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/bin/adf_cli.dart",
            "args": [
                "students",
                "byId",
                "-i",
                "${input:id_student}"
            ]
        },
        {
            "name": "Student Insert",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/bin/adf_cli.dart",
            "args": [
                "students",
                "insert",
                "-f",
                "${input:file_path}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "id_student",
            "description": "Informe o ID do Aluno",
            "default": "",
            "type": "promptString"
        },
        {
            "id": "file_path",
            "description": "Informe o path do arquivo",
            "default": "",
            "type": "promptString"
        },
    ]
}